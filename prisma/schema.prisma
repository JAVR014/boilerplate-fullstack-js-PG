// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Client {
  id        Int        @id @default(autoincrement())
  name      String
  cedula    String     @unique
  createdAt DateTime   @default(now())
  cylinders Cylinder[]
}

model Cylinder {
  id         Int    @id @default(autoincrement())
  size       String
  nozzleType String
  quantity   Int
  clientId   Int
  client     Client @relation(fields: [clientId], references: [id])
}